{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tigris-launcher",
  "version": "0.1.0",
  "identifier": "org.whiskersapps.tigris",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tigris-launcher",
        "width": 900,
        "height": 660,
        "center": true,
        "transparent": true,
        "maximizable": false,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*", "$HOME", "$HOME/**", "$HOME/.config/**", "$HOME/.local/**", "$HOME/.icons/**", "$APPDATA/assets/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
